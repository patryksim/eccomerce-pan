{% comment %} let positionForm = document.querySelector('.form_predictice__search').offsetLeft;
buscador_predictivo.addEventListener('input', () => {
        
    if (buscador_predictivo.value.length>2) {
        contenedor_resultados.style.display="grid";
        contenedor_resultados.innerHTML = "";
        fetch("/search/suggest?q="+buscador_predictivo.value+"&resources[type]=product&section_id=predictive-search").then(res => res.text()).then(data => {
            contenedor_resultados.innerHTML = data;
        })
    }
})


