      <div class="display-no cartitems--container container">
        <div class="row">
           <div class="col-12">
             <br>
             <h2 class="text-gris-jamar fs-3 fw-bold mb-2">Carrito de compras</h2>
           </div>
          <div class="col-12 col-md-8">
            <div class="pt-4" id="crediCartitems">
            </div>
          </div>
          <div class="col-12 col-md-4">
            <div class="container p-3 rounded-4 border border-1" id="summary">
              <div class="row">
                <div class="col-12">
                  <h2 class="text-gris-jamar fs-3 fw-bold mb-1">Resumen del pedido</h2>
                  <p class="cantidad-productos mt-0 mb-2"></p>
                </div>
              </div>
              <div class="row">
                <div class="col-6"><p>Subtotal:</p></div>
