<style>

.credijamar-section {
  grid-template-columns: 60% 40%;
  align-items: center;
  margin-top: 100px;
  display: grid;
}

@media (max-width: 800px) {
  .credijamar-section {
    flex-direction: column-reverse;
    display: flex;
    margin-top: 48px;
  }
}

.credijamar-section img {
  width: 100%;
  height: 500px;
  object-fit: cover;
}

@media (max-width: 800px) {
  .credijamar-section img {
    width: 100%;
    height: auto;
  }
}
</style>

    <img src="{{ section.settings.imagen_link1 | image_url : width: auto}}" alt="{{ section.settings.imagen_link1.alt }}">
    <img src="{{ section.settings.imagen_link2 | image_url : width: auto}}" alt="{{ section.settings.imagen_link2.alt }}">

    {% schema %}
    {
       "name":"Coleccion Credijamar",
        "tag": "section",
       "class":"credijamar-section",
       
       "settings": [
        {
            "type":"image_picker",
            "id":"imagen_link1",
            "label":"Colocar la imagen"
        },
        {
            "type":"image_picker",
            "id":"imagen_link2",
            "label":"Colocar la imagen"
        }
       ],
       "presets":[
        {
            "name":"Coleccion Credijamar"
        }
       ]
    }
    {% endschema %}