<section class="container">
    <div class="row">
            <h2 class="text-center lato-os"> {{section.settings.tamano_title}} </h2>
            <div class="col-12">
                <div class="row justify-content-md-center">
                        <div class="col col-md-10">
                            <div class="row justify-content-md-around justify-content-start">
                                 {% for block in section.blocks %}
                                    {% assign b = block.settings %}
                                    <div class="col-6 col-md-3 d-flex justify-content-center">
                                            <a href="{{b.enlace_tamano}}" target="_blank" rel="noopener noreferrer" class="text-decoration-none">
                                                <figure class="figure-sizes">
                                                    {{ b.image_sizes | image_url : width: auto | image_tag: alt: 'My favicon', srcset: nil, class: 'img-fluid' }}
                                                    <figcaption class="mt-2"><b>{{ b.title }}</b></figcaption>
                                                </figure>
                                            </a>
                                    </div>
                            {% endfor %} 
                            </div>
                        </div>
                </div>
            </div>
    </div>
</section>
