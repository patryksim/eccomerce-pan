{% schema %}

{
  "name": "Section Card",
  "class": "section section-card-img",
  "settings": [
      {
      "type": "text",
      "id": "tamano_title",
      "label": "Titulo Tamaños",
      "default": "Tamaños de nuestros <b>colchones</b>"
    }
],
    "blocks": [
    {
        "name" : "Tamaño de Colchones",
        "type": "Texto",
        "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Nombre de la sucursal"
        },
        {
            "type": "page",
            "id": "enlace_tamano",
            "label": "Enlace"
        },
        {
            "type": "image_picker",
            "id": "image_sizes",
            "label": "Imagen Ref"
        }
        ]       
    }
    ],
    "presets": [
        {
            "name": "Section Card Imagen",
            "category": "Custom"  
        }
    ]
  
}

{% endschema %}