<div class="container-fluid">
  <div class="row">
    <div class="col-12 p-0">
    	<div id="carrusel-home" onmouseover="showCarrouselbutton()" onmouseleave="eraseCarrouselbutton()" class="carousel slide" data-bs-ride="carousel">
            {% if section.blocks.size > 1 %}
              <div class="carousel-indicators mb-1">
                {% for block in section.blocks %}
                  <button type="button" data-bs-target="#carrusel-home" 
                    data-bs-slide-to="{{ forloop.index | minus: 1 }}"  
                    class="{% if forloop.index == 1 %}active{% endif %} rounded-circle mt-auto mb-auto" aria-current="true" 
                    aria-label="Slide {{ forloop.index }}">
                  </button>
                {% endfor %}
              </div>
            {% endif %}
	        <div class="carousel-inner">
	          {% for block in section.blocks %}
	            <div class="carousel-item {% if forloop.index == 1 %}active{% endif %}">
                    <a href="{{  block.settings.link.url }}">
                      <img src="{{ block.settings.image_desktop | img_url:'master' }}" loading="lazy" class="d-none d-sm-block" alt="...">
                      <img src="{{ block.settings.image_mobile | img_url:'master' }}" loading="lazy" class="d-block d-sm-none w-100" alt="...">
                    </a>
	            </div>
	          {% endfor %}
	        </div>
           {% if section.blocks.size > 1 %}
			<button class="carousel-control-prev d-none d-md-flex visually-hidden" type="button" data-bs-target="#carrusel-home" data-bs-slide="prev">
              <div class="button-box rounded-circle d-flex justify-content-center bg-white">
				<span class="carousel-control-prev-icon align-self-center me-1" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
              </div>
			</button>
			<button class="carousel-control-next d-none d-md-flex visually-hidden" type="button" data-bs-target="#carrusel-home" data-bs-slide="next">
              <div class="button-box rounded-circle d-flex justify-content-center bg-white">
				<span class="carousel-control-next-icon align-self-center ms-1" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
              </div>
            </button>
            {% endif %}
		</div>
      </div>
	</div>
</div>
