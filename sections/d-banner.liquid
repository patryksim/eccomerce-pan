<main class="container-fluid position-relative d-flex justify-content-center">
   <div class="row">
      <div class="col-12 p-0 position-relative">
         <picture>
            <source media="(max-width:650px)" srcset="{{ section.settings.imagen_movil | img_url: 'master' }}" />
            <img class="img-fluid" src="{{ section.settings.imagen_desktop | image_url: width:1920, format: 'pjpg' }}" alt="{{ section.settings.imagen_desktop.alt }}" />
         </picture>
      </div>
   </div>
   <div class="container position-absolute bottom-0">
      <div class="row position-relative justify-content-center">
         <h1 class="main-title-sucursales-individual position-absolute bottom-0 text-white mb-md-5 mb-4 col-md-12 col-11">
            {{ section.settings.text_up }}
            <span class="icono-tienda position-absolute start-0">
               <svg width="13" height="16" viewbox="0 0 13 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12.4545 6.72727C12.4545 11.1818 6.72727 15 6.72727 15C6.72727 15 1 11.1818 1 6.72727C1 5.20831 1.60341 3.75155 2.67748 2.67748C3.75155 1.60341 5.20831 1 6.72727 1C8.24624 1 9.70299 1.60341 10.7771 2.67748C11.8511 3.75155 12.4545 5.20831 12.4545 6.72727Z" stroke="white" stroke-linecap="round" stroke-linejoin="round"></path>
                  <path d="M6.72727 8.63642C7.78163 8.63642 8.63636 7.78169 8.63636 6.72733C8.63636 5.67297 7.78163 4.81824 6.72727 4.81824C5.67291 4.81824 4.81818 5.67297 4.81818 6.72733C4.81818 7.78169 5.67291 8.63642 6.72727 8.63642Z" stroke="white" stroke-linecap="round" stroke-linejoin="round"></path>
               </svg>
               {{ section.settings.text_down }}
            </span>
         </h1>
      </div>
   </div>
</main>

{% schema %}
{
  "name": "Banner Principal",
  "tag": "div",
  "class":"banner-tiendas",
    "settings": [
    {
      "type": "image_picker",
      "id": "imagen_desktop",
      "label": "Imagen desktop"
    },
    {
      "type": "image_picker",
      "id": "imagen_movil",
      "label": "Imagen m√≥vil"
    },
    {
      "type": "text",
      "id": "text_up",
      "label": "Ingresar el texto de arriba"
    },
    {
      "type": "text",
      "id": "text_down",
      "label": "Ingresar el texto de abajo"
    }
  ],
  "presets": [
     {
       "name": "Banner Principal"       
     }
   ]
}
{% endschema %}