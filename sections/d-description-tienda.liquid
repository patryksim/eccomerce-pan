
{% assign content = section.settings %} 

<div class="container mb-5">
   <div class="row container-description-title mt-5 justify-content-center">
      <div class="col-md-12 col-11">
         <h2>{{content.title}}</h2>
         <p>{{content.description}}</p>
      </div>
   </div>
   <div class="row">
      <div class="col-md-6 col-12">
        <a class="w-100" href="/pages/colchones-panama"> 
            <img class="h-100 img-fluid" src="{{ content.main_image | img_url:  'master' }}" alt="{{ content.main_image.alt }}" />
        </a>
      </div>
      <div class="col-md-6 col-12 mt-md-0 mt-3">
         <div class="row justify-content-center">
            <img class="col-md-6 col-6 pe-2 pe-md-3" src="{{ content.second_image | img_url:  'master' }}" alt="{{ content.second_image.alt }}" />
            <img class="col-md-6 col-6 ps-2" src="{{ content.third_image | img_url:  'master' }}" alt="{{ content.third_image.alt }}" />
            <img class="col-md-6 col-6 mt-3 mt-md-4 pe-2 pe-md-3" src="{{ content.fourt_image | img_url:  'master' }}" alt="{{ content.fourt_image.alt }}" />
            <img class="col-md-6 mt-3 mt-md-4 col-6 ps-2" src="{{ content.five_image | img_url:  'master' }}" alt="{{ content.five_image.alt }}" />
        </div>
      </div>
   </div>
</div>


{% schema %}
{
  "name": "Tienda Descripcion",
  "tag": "section",
  "class":"tienda-description",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titulo de la sección"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripcion de la sección"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Imagen Principal"
    },
    {
      "type": "image_picker",
      "id": "second_image",
      "label": "Imagen Secundaria 2"
    },
    {
      "type": "image_picker",
      "id": "third_image",
      "label": "Imagen Secundaria 3"
    },
    {
      "type": "image_picker",
      "id": "fourt_image",
      "label": "Imagen Secundaria 4"
    },
    {
      "type": "image_picker",
      "id": "five_image",
      "label": "Imagen Secundaria 5"
    }
  ],
  "presets": [
     {
       "name": "Tienda Descripcion"       
     }
   ]
}
{% endschema %}