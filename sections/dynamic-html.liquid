<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-html"
></script>

<section class="{% if template == "blog.new-blog" %}  custom-html--container  {% else %}  container-fluid  {% endif %} mt-0 p-0">
  {% if section.settings.title != blank %}
    <h2 class="home-section--title linea" >
      <span>{{ section.settings.title | escape }}</span>
    </h2>
  {% endif %}
  <div class="rte" data-rte>
    {{ section.settings.custom_html }}
  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "class": "html--section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Custom HTML"
    },
    {
      "type": "html",
      "id": "custom_html",
      "label": "HTML",
      "default": "<p>Write or paste your HTML code here</p>"
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom HTML"
    }
  ]
}

{% endschema %}