{% schema %}

{
    "name":"Seccion Siz 2",
    "tag":"section",
    "class":"container section-contenedor-tamanos",
    "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Colocar titulo del Hero",
      "default": "Doler ipsum dolor sit amet consectetur adipiscing"
    }
    ],
    "blocks": [
        {
        "name" : "B Tamano",
        "type": "block",
        "settings": [
            {
                "type": "image_picker",
                "id": "image_sizes",
                "label": "Imagen de tamano"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Subtitulo de tamano"
            },
            {
                "type": "url",
                "id": "enlace_tamano",
                "label": "Colocar enlace"
            }
            ]
        }
    ],
    "presets": [
        {
            "name": "Seccion Taman",
            "category": "Colchones"
        }
    ]
}

{% endschema %}