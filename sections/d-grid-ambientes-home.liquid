                    </a>
                  {% else %}
                    <img class="w-100" src="{{ section.settings.image_3_mobile | img_url:'master' }}">
                  {% endif %}
                </div>
              </div>
              <div class="col-12 align-self-end">
                <div class="position-relative">
                  {% if section.settings.product_4 != blank %}
                    <a class="col-12" href="{{ section.settings.product_4.url }}">
                        <img class="w-100" src="{{ section.settings.image_4_mobile | img_url:'master' }}">
                    </a>
                    <a href="{{ section.settings.product_4.url }}" class="position-absolute img-linked bottom-0 d-flex justify-content-center end-0 mr-2 mb-2 rounded-circle p-1 bg-white">
                        <img class="m-0 p-1" width="20" src="https://cdn.shopify.com/s/files/1/0516/5478/7271/files/Untitled_design_3.png?v=1641233166">
                    </a>
                  {% else %}
                    <img class="w-100" src="{{ section.settings.image_4_mobile | img_url:'master' }}">
                  {% endif %}
