<br><br><br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-11 col-md-8">
      <h2 class="text-center text-gris-jamar">{{ section.settings.title }}</h2>
      <p class="text-center text-gris-jamar">{{ section.settings.text }}</p>
      <br>
    </div>
  </div>
</div>
<div class="container d-none d-sm-block">
    <div class="row">
        <div class="col-md-8">
          <div class="position-relative mb-sm-4 mb-md-0">
            {% if section.settings.product_1 != blank %}
              <a href="{{ section.settings.product_1.url }}">
                  <img class="w-100" src="{{ section.settings.image_1_desktop | img_url:'master' }}">
              </a>
              <a href="{{ section.settings.product_1.url }}" class="position-absolute img-linked bottom-0 d-flex justify-content-center end-0 mr-4 mb-3 rounded-circle p-1 bg-white">
                  <img class="m-0 p-1" width="25" src="https://cdn.shopify.com/s/files/1/0516/5478/7271/files/Untitled_design_3.png?v=1641233166">
              </a>
            {% else %}
              <img class="w-100" src="{{ section.settings.image_1_desktop | img_url:'master' }}">
            {% endif %}
          </div>
        </div>
        <div class="col-md-4">
            <div class="row h-100">
              <div class="col-12">
                <div class="position-relative mb-sm-4 mb-mb-0">
                  {% if section.settings.product_2 != blank %}
                    <a href="{{ section.settings.product_2.url }}">
                        <img class="w-100 align-self-start" src="{{ section.settings.image_2_desktop | img_url:'master' }}">
                    </a>
                    <a href="{{ section.settings.product_2.url }}" class="position-absolute img-linked bottom-0 d-flex justify-content-center end-0 mr-4 mb-3 rounded-circle p-1 bg-white">
                        <img class="m-0 p-1" width="25" src="https://cdn.shopify.com/s/files/1/0516/5478/7271/files/Untitled_design_3.png?v=1641233166">
                    </a>
                  {% else %}
                    <img class="w-100 align-self-start" src="{{ section.settings.image_2_desktop | img_url:'master' }}">
                  {% endif %}
                </div>
              </div>
              <div class="col-6 align-self-end">
                <div class="position-relative">
                  {% if section.settings.product_3 != blank %}
                    <a href="{{ section.settings.product_3.url }}">
                        <img class="w-100 m-0" src="{{ section.settings.image_3_desktop | img_url:'master' }}">
                    </a>
                    <a href="{{ section.settings.product_3.url }}" class="position-absolute img-linked bottom-0 d-flex justify-content-center end-0 mr-4 mb-3 rounded-circle p-1 bg-white">
                        <img class="m-0 p-1" width="25" src="https://cdn.shopify.com/s/files/1/0516/5478/7271/files/Untitled_design_3.png?v=1641233166">
                    </a>
                  {% else %}
                    <img class="w-100 m-0" src="{{ section.settings.image_3_desktop | img_url:'master' }}">
                  {% endif %}
                </div>
              </div>
              <div class="col-6 align-self-end">
                <div class="position-relative">
                  {% if section.settings.product_4 != blank %}
                    <a href="{{ section.settings.product_4.url }}">
                        <img class="w-100 m-0" src="{{ section.settings.image_4_desktop | img_url:'master' }}">
                    </a>
                    <a href="{{ section.settings.product_4.url }}" class="position-absolute img-linked bottom-0 d-flex justify-content-center end-0 mr-4 mb-3 rounded-circle p-1 bg-white">
                        <img class="m-0 p-1" width="25" src="https://cdn.shopify.com/s/files/1/0516/5478/7271/files/Untitled_design_3.png?v=1641233166">
                    </a>
                  {% else %}
                    <img class="w-100 m-0" src="{{ section.settings.image_4_desktop | img_url:'master' }}">
                  {% endif %}
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
<div class="container d-block d-sm-none">
    <div class="row">
        <div class="col-12 p-0 mb-3">
          <div class="position-relative">
            {% if section.settings.product_1 != blank %}
              <a href="{{ section.settings.product_1.url }}">
                  <img class="w-100" src="{{ section.settings.image_1_mobile | img_url:'master' }}">
              </a>
              <a href="{{ section.settings.product_1.url }}" class="position-absolute img-linked bottom-0 d-flex justify-content-center end-0 mr-2 mb-2 rounded-circle p-1 bg-white">
