          "type": "select",
          "id": "font_col_class",
          "label": "Tipo de Letra",
          "options": [
            {
              "value": "collection-mystic",
              "label": "Coleccion Mystic"
            },
            {
              "value": "collection-natural",
              "label": "Coleccion Natural"
            },
            {
              "value": "collection-play",
              "label": "Coleccion Play"
            },
            {
              "value": "collection-royal",
              "label": "Coleccion Royal"
            },
            {
              "value": "collection-silver",
              "label": "Coleccion Silver"
            },
            {
              "value": "collection-tempo",
              "label": "Coleccion Tempo"
            }
          ],
          "default": "collection-mystic"
        },
        {
          "type": "text",
          "id": "col_title",
          "label": "Titulo de coleccion"
        },
        {
          "type": "textarea",
          "id": "col_message",
          "label": "Mensaje"
        },
        {
          "type": "page",
          "id": "col_url",
          "label": "Link de coleccion"
        }
       ]
     },
      {
       "name": "Estilo",
       "type": "style",
       "settings": [
          {
            "type": "image_picker",
            "id": "style_image",
            "label": "Imagen de coleccion o estilo"
          },
         {
          "type": "select",
          "id": "font_style_class",
          "label": "Tipo de Letra",
          "options": [
            {
              "value": "style-moderno-glam",
              "label": "Estilo Moderno Glam"
            },
            {
              "value": "style-natural-century",
              "label": "Estilo Natural Century"
            },
            {
              "value": "style-contemporaneo",
              "label": "Estilo Contemporáneo"
            }
          ],
          "default": "style-moderno-glam"
        },
        {
          "type": "text",
          "id": "style_title",
          "label": "Titulo de estilo"
        },
        {
          "type": "textarea",
          "id": "style_message",
          "label": "Mensaje"
        },
        {
          "type": "page",
          "id": "style_url",
          "label": "Link de estilo"
        }
       ]
     }
