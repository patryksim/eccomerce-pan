

<div class="row mt-4 justify-content-center">
	<div class="col-12 {{ section.settings.font_class }}">
		<h2 class="text-center">{{ section.settings.title }}</h2>
	</div> 
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'collection' %}
          <div class="col-12 col-sm-4">
              <a href="{{ block.settings.col_url }}">
                  <img class="mt-4" src="{{ block.settings.col_image | image_url }}">
              </a>
              <p class="fs-5 pt-2">C O L E C C I Ó N</p>
              <h2 class="mt-0 text-dark fs-1 {{ block.settings.font_col_class }}">{{ block.settings.col_title }}</h2>
              <p class="fs-6">{{ block.settings.col_message }}</p>
              <a class="text-dark fw-bolder text-decoration-underline" href="{{ block.settings.col_url }}"><p class="mb-0">Ver colección</p></a>
          </div>
        {% when 'style' %}
          <div class="col-12 col-sm-4">
              <a href="{{ block.settings.style_url }}">
                  <img class="mt-4" src="{{ block.settings.style_image | image_url }}">
              </a>
              <p class="fs-5 pt-2">E S T I L O</p>
              <h2 class="mt-0 text-dark fs-1 {{ block.settings.font_style_class }}">{{ block.settings.style_title }}</h2>
              <p class="fs-6">{{ block.settings.style_message }}</p>
              <a class="text-dark fw-bolder text-decoration-underline" href="{{ block.settings.style_url }}"><p class="mb-0">Ver colección</p></a>
          </div>
      {% endcase %}
    {% endfor %}
</div>


{% schema %}
  {
    "name": "Lista de col o styles",
    "tag":"section",
    "class":"container pt-4",
    "settings": [ 
      {
        "type": "text",
        "id": "title",
        "label": "Titulo"
      },
      {
        "type": "select",
        "id": "font_class",
        "label": "Tipo de Letra",
        "options": [
          {
            "value": "general",
            "label": "Lato"
          },
          {
            "value": "style-moderno-glam",
            "label": "Estilo Moderno Glam"
          },
          {
            "value": "style-natural-century",
            "label": "Estilo Natural Century"
          },
          {
            "value": "style-contemporaneo",
            "label": "Estilo Contemporáneo"
          },
          {
            "value": "collections-jamar",
            "label": "Colecciones General"
          }
        ],
        "default": "general"
      }
    ],
  "blocks": [
     {
       "name": "Coleccion",
