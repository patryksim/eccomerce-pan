<br><br><br>
<div class="container section-categorias-recomendadas">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center text-gris-jamar d-none d-md-block">
        {{ section.settings.title }}
      </h2>
      <h2 class="text-center text-gris-jamar fs-4 d-block d-md-none">
        {{ section.settings.title }}
      </h2>
    </div>
  </div>
  <div class="row">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'collection' %}
          <div class="col-{{ block.settings.mobile_width }} col-md-{{ block.settings.desktop_width }} mt-4">
            <a href="{{ block.settings.link }}">
              <img class="img-fluid mb-2" alt="{{ block.settings.image.alt}}" src="{{ block.settings.image | img_url:'master' }}" loading="lazy">
            </a>
            <a class="text-dark fw-normal" href="{{ block.settings.link }}">{{ block.settings.title }}</a>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Grid Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titulo"
    }
  ],
  "blocks": [
     {
       "name": "Collection",
       "type": "collection",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
        {
          "type": "text",
          "id": "title",
          "label": "Titulo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "range",
          "id": "mobile_width",
          "min": 6,
          "max": 12,
          "step": 1,
          "label": "Ancho mobile",
          "default": 6
        },
        {
          "type": "range",
          "id": "desktop_width",
          "min": 4,
          "max": 12,
          "step": 2,
          "label": "Ancho desktop",
          "default": 4
        }
       ]
     }
   ],
  "presets": [
     {
       "name": "Grid Collections",
       "settings": {
          "title": "Grid Collections"
        },
       "blocks": [
         {
           "type": "collection"
         }
       ]
     }
   ]
}
{% endschema %}


